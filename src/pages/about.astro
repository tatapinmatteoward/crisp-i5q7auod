---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About Crispy Chronicles";
const pageDescription = "Discover the story behind Crispy Chronicles, your go-to source for mouthwatering chicken recipes, expert techniques, and a world of global flavors. Embrace the warm, rustic charm of crispy perfection.";

const features = [
  {
    icon: "fas fa-utensils",
    title: "Authentic Recipes",
    description: "Traditional techniques passed down through generations"
  },
  {
    icon: "fas fa-globe-americas",
    title: "Global Flavors",
    description: "Exploring culinary traditions from around the world"
  },
  {
    icon: "fas fa-heart",
    title: "Passionate Creators",
    description: "Home cooks and culinary enthusiasts united by love for chicken"
  }
];

const teamMembers = [
  {
    name: "Sarah Mitchell",
    role: "Founder & Head Chef",
    bio: "With over 15 years of culinary experience, Sarah brings her grandmother's secret spices to every recipe."
  },
  {
    name: "Michael Rodriguez",
    role: "Technique Specialist",
    bio: "Michael's precision and passion for perfect frying has made him a household name in modern cuisine."
  },
  {
    name: "Emma Thompson",
    role: "Flavor Explorer",
    bio: "Emma's travels have given her an incredible palate for regional specialties and fusion techniques."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-amber-900 to-amber-700 py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="bg-[url('data:image/svg+xml;base64,')] w-full h-full"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6 leading-tight">
          About Crispy Chronicles
        </h1>
        <p class="text-xl md:text-2xl text-amber-100 font-serif italic max-w-2xl mx-auto">
          Savor the Crunch: Chicken Recipes, Techniques, and Global Flavors
        </p>
      </div>
    </div>
  </div>

  <!-- Story Section -->
  <section class="py-16 bg-amber-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-10 border-l-4 border-amber-600">
          <h2 class="text-3xl font-serif font-bold text-amber-900 mb-6">Our Story</h2>
          <div class="prose prose-lg max-w-none">
            <p class="text-amber-800 mb-4">
              It all started with a simple backyard barbecue, where the sizzle of frying chicken brought friends and family together under the stars. Inspired by that unforgettable evening, we set out to share our love for chicken in all its crispy glory.
            </p>
            <p class="text-amber-800 mb-4">
              From the smoky spices of Southern fried chicken to the tangy zest of Korean fried delights, we've traveled the globe to bring you authentic recipes that capture the soul of each region.
            </p>
            <p class="text-amber-800">
              Our mission is to make the art of perfect chicken accessible to everyone, whether you're a seasoned chef or a beginner in the kitchen. Through detailed tutorials, seasonal recipes, and cultural insights, we transform every meal into an adventure.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-gradient-to-br from-amber-100 to-amber-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-amber-900 mb-4">Why We Love What We Do</h2>
        <div class="w-24 h-1 bg-amber-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white rounded-xl shadow-md p-8 text-center hover:shadow-lg transition-shadow duration-300 border border-amber-100">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <i class={`${feature.icon} text-2xl text-amber-700`}></i>
            </div>
            <h3 class="text-xl font-serif font-semibold text-amber-900 mb-3">{feature.title}</h3>
            <p class="text-amber-700">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-amber-900 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Meet Our Team</h2>
        <p class="text-amber-200 max-w-2xl mx-auto">Passionate individuals who share our vision of bringing crispy perfection to every kitchen</p>
        <div class="w-24 h-1 bg-amber-500 mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {teamMembers.map((member, index) => (
          <div key={index} class="bg-amber-800 rounded-xl p-8 text-center hover:bg-amber-700 transition-colors duration-300">
            <div class="w-32 h-32 bg-amber-700 rounded-full mx-auto mb-6 flex items-center justify-center">
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16" />
            </div>
            <h3 class="text-xl font-serif font-semibold mb-2">{member.name}</h3>
            <p class="text-amber-300 font-medium mb-4">{member.role}</p>
            <p class="text-amber-100 text-sm">{member.bio}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="py-16 bg-gradient-to-r from-amber-800 to-amber-900 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <blockquote class="text-2xl md:text-3xl font-serif italic mb-8">
          "Every piece of chicken tells a story. We're here to help you create your own crispy chapter."
        </blockquote>
        <p class="text-amber-200 font-medium">â€” The Crispy Chronicles Team</p>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-amber-900 mb-4">Our Core Values</h2>
        <div class="w-24 h-1 bg-amber-600 mx-auto"></div>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex items-start space-x-4">
            <div class="mt-2 text-amber-600">
              <i class="fas fa-seedling text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-serif font-semibold text-amber-900 mb-2">Quality Ingredients</h3>
              <p class="text-amber-700">We source only the finest ingredients, ensuring every recipe delivers exceptional flavor and nutrition.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4">
            <div class="mt-2 text-amber-600">
              <i class="fas fa-bolt text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-serif font-semibold text-amber-900 mb-2">Simple Techniques</h3>
              <p class="text-amber-700">Complex flavors shouldn't require complicated methods. Our recipes use straightforward approaches for perfect results.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4">
            <div class="mt-2 text-amber-600">
              <i class="fas fa-globe text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-serif font-semibold text-amber-900 mb-2">Cultural Respect</h3>
              <p class="text-amber-700">We honor and preserve culinary traditions while adapting recipes for modern kitchens and palates.</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4">
            <div class="mt-2 text-amber-600">
              <i class="fas fa-heart text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-serif font-semibold text-amber-900 mb-2">Community First</h3>
              <p class="text-amber-700">Our recipes thrive in shared meals and meaningful connections. We build a community of food lovers.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .shine-effect {
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    background-size: 200% 100%;
    animation: shine 3s infinite;
  }
  
  @keyframes shine {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }
  
  .border-gradient {
    position: relative;
  }
  
  .border-gradient::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 0.75rem;
    border: 2px solid transparent;
    background: linear-gradient(to bottom right, #cc5500, #2e7d32) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    pointer-events: none;
  }
</style>